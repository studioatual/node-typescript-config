{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES6"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}